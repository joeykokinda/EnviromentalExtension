{
  "manifest_version": 3,
  "name": "LLM Environmental Impact Tracker",
  "version": "1.0.0",
  "description": "Track the environmental impact of your AI/LLM usage",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "sidePanel"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://bard.google.com/*",
    "https://gemini.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "LLM Environmental Impact"
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content-direct.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["calculations.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
